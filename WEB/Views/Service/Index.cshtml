<link href="~/lib/DataTables/datatables.min.css" rel="stylesheet">
<div class="container-fluid" id="Services">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-2 text-gray-800">Services</h1>
            <p class="mb-4">Admin Services.</p>
        </div>
        <button type="button" class="btn btn-success d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" v-on:click="NewService"><i class="fas fa-fw fa-plus"></i></button>
    </div>
    <table id="tableService" class="display" style="width:100%">
    </table>
    <div class="modal fade" id="EditServiceModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Service Select</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" v-on:click="CloseModalService">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label>
                            <input type="text" class="form-control" v-model="selectservice.name" placeholder="Enter name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Description</label>
                            <input type="text" class="form-control" v-model="selectservice.description" placeholder="Enter description">
                        </div>
                    </form>
                    <hr>
                    <div class="text-center">
                        <label class="Message" style="color: red;">{{message}}</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" v-if="selectservice.id != 0" v-on:click="DeleteService">Delete</button>
                    <button type="button" class="btn btn-primary" v-on:click="SaveService">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/DataTables/jQuery-3.6.0/jquery-3.6.0.min.js"></script>
<script src="~/lib/DataTables/datatables.min.js"></script>
<script src="~/js/Service/index.js" asp-append-version="true"></script>
